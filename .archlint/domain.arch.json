{
  "$schema": "../src/schema.json",
  "name": "domain-layers",
  "exclude": [
    "node_modules**",
    "**.spec.ts"
  ],
  "failOnUnassigned": true,
  "artifacts": [
    {
      "name": "cli",
      "include": [
        "cli/**",
        "index.ts"
      ],
      "mayUseAllBelow": true
    },
    {
      "name": "report",
      "include": [
        "report/**"
      ],
      "mayUse": [
        "check",
        "assign"
      ]
    },
    {
      "name": "check",
      "include": [
        "check/**"
      ],
      "mayUse": [
        "describe",
        "assign",
        "parse"
      ]
    },
    {
      "name": "assign",
      "include": [
        "assign/**"
      ],
      "mayUse": [
        "describe",
        "parse"
      ]
    },
    {
      "name": "describe",
      "include": [
        "describe/**"
      ],
      "mayUse": [
        "parse"
      ]
    },
    {
      "name": "parse",
      "include": [
        "parse/**"
      ]
    },
    {
      "name": "common",
      "include": [
        "common/**"
      ],
      "mayBeUsedFromAllAbove": true
    }
  ]
}