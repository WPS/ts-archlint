{
  "name": "ts-archlint",
  "version": "0.1.0",
  "description": "Simple dependency checker for typescript files",
  "main": "dist/index.js",
  "bin": {
    "archlint": "dist/index.js"
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsup src/index.ts",
    "publishLocal": "npm run build && npm pack --pack-destination ./packed",
    "start": "npm run build -- --watch",
    "test": "jest --config ./jest.config.js --watchAll",
    "test:ci": "jest --config ./jest.config.js --collectCoverage --runInBand"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "tsup": "^6.5.0",
    "typescript": "^4.9.5"
  }
}
