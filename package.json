{
  "name": "ts-archlint",
  "version": "0.0.0-SNAPSHOT",
  "description": "Simple dependency checker for typescript files",
  "main": "dist/index.js",
  "bin": {
    "ts-archlint": "dist/index.js"
  },
  "files": [
    "/dist",
    "/doc"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "archlint": "node dist/index.js ./src",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "precommit:check": "npm run lint && npm run test && npm run build && npm run archlint"
  },
  "license": "MIT",
  "dependencies": {
    "jsonschema": "^1.5.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^3.2.4"
  }
}
