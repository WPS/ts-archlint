{
  "name": "ts-archlint",
  "version": "0.0.0-SNAPSHOT",
  "description": "Simple dependency checker for typescript files",
  "main": "dist/index.js",
  "bin": {
    "archlint": "dist/index.js"
  },
  "files": [
    "/dist",
    "/doc"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "jest --config ./jest.config.js --collectCoverage --runInBand",
    "test:watch": "jest --config ./jest.config.js --watchAll",
    "archlint": "node dist/index.js ./src"
  },
  "license": "MIT",
  "dependencies": {
    "jsonschema": "^1.4.1"
  },
  "devDependencies": {
    "jest": "^29.4.1",
    "@types/jest": "^29.4.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
